          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/post"
            }
          },
          "400": {
            "description": "Failed, wrong data!"
          },
          "404": {
            "description": "Failed. Post was not found."
          }
        }
      },
      "put": {
        "summary": "Edit an item by UUID",
        "tags": [
          "Item request"
        ],
        "parameters": [
          {
            "in": "path",
